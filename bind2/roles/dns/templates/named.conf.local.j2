zone "localdomain" {
    type master;
    file "/var/cache/bind/zones/db.localdomain";
    key-directory "/etc/bind/keys";
    auto-dnssec maintain;
    inline-signing yes;
    allow-transfer { 10.0.0.12; };
    allow-update { none; };
};

zone "0.0.10.in-addr.arpa" {    # reverse zone
    type master;
    file "/var/cache/bind/zones/db.0.0.10";
    key-directory "/etc/bind/keys";
    auto-dnssec maintain;
    inline-signing yes;
    allow-transfer { 10.0.0.12; };
    allow-update { none; };
};
